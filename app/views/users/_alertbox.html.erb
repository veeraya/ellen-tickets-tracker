<% if defined? @error_msg %>
<div class="alert alert-error">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <%= @error_msg %>
</div>
<% else %>
<div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert">×</button>
  Your trackings preference is successfully saved.
</div>
<% end %>